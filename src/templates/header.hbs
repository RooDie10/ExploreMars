<div class='flex justify-center gap-2'>
  {{#if isUserAuth}}
    <h1>Hello {{name}}!</h1>
    <a class="button" href='/profile'>Profile</a>
  {{else}}
    <button
      hx-on:click="openModal('signinDialog')"
      class='button'
    >Sign in</button>
    <button
      hx-on:click="openModal('signupDialog')"
      class='button'
    >Sign up</button>
  {{/if}}
</div>