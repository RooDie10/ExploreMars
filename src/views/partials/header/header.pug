header(class="flex items-center bg-transparent justify-between fixed w-full h-16 py-4 px-20 z-10 group")
  div(class="flex gap-8 items-center")
    a(class="font-bold text-xl text-fontColor" href="/#") Exploring Mars
    nav(class='hidden md:block')
      ul(class="flex gap-4")
        li
          a.link(href="/levels" class="no-underline text-fontColor group-[.intersect]:text-actionColor transition-all") Levels
        li
          a.link(href="/#about" class="no-underline text-fontColor group-[.intersect]:text-actionColor transition-all") About
        li
          a.link(href="/#faq" class="no-underline text-fontColor group-[.intersect]:text-actionColor transition-all") FAQ
        li
          a.link(href="/#contacts" class="no-underline text-fontColor group-[.intersect]:text-actionColor transition-all") Contacts

  div(hx-trigger="reload-user from:body" hx-get="/views/header" hx-swap="innerHTML" hx-target="this")
    include header_sign.pug