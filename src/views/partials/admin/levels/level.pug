div#level(class="p-4 bg-altBgColor/30 my-4")
  a.link(class="no-underline" href="/admin/levels" hx-get="/admin/levels/" hx-select="#content" hx-push-url="/admin/levels/" hx-target="#content" hx-swap="outerHTML transition:true") Back 
  div(class="my-8")
    h2.h2=level.data.type
    p.p
      strong description:  
      =level.data.description
    p.p
      strong price:  
      =level.data.price
    p.p(class="mt-8")
      strong included: 
    ul(class="pl-8 list-disc")
      each item in level.data.included
        li
          p.p=item
  div(class="flex gap-4")
    button(class="button" hx-swap="outerHTML" hx-target="this" hx-confirm="Are you sure you want to delete this level? This action is irreversible." hx-delete='/api/level/' + level.id) Delete
    button(class="button" hx-target="#level" hx-select="#level" hx-swap="outerHTML transition:true" hx-get='/admin/levels/' + level.id hx-vals='{"status": "edit"}') Edit