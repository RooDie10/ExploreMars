div(class="p-2 bg-blue-100 rounded-xl my-4")
  a.link(href="/admin/levels" hx-get="/admin/levels/" hx-select="#content" hx-push-url="/admin/levels/" hx-target="#content" hx-swap="innerHTML") Back 
  h2.h2=level.data.type
  p
    strong description:  
    =level.data.description
  p
    strong price:  
    =level.data.price
  ul(class="pl-4 list-disc")
    each item in level.data.included
      li=item
  a(class="text-red-600 font-bold underline cursor-pointer" hx-confirm="Are you sure you want to delete this level? This action is irreversible." hx-delete='/api/level/' + level.id) Delete