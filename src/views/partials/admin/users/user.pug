div#user(class="p-4 bg-altBgColor/30 my-4")
  a.link(class="no-underline" href="/admin/users" hx-get="/admin/users/" hx-select="#content" hx-push-url="/admin/users/" hx-target="#content" hx-swap="outerHTML transition:true") Back 
  div(class="my-8")
    h3.h3=user.name
    p
      strong email: 
      =user.email
    if user.level
      p
        strong level: 
        =user.level
  div(class="flex gap-4")
    button(class="button" hx-swap="outerHTML transition:true" hx-target="this" hx-confirm="Are you sure you want to delete this user? This action is irreversible." hx-delete='/api/user/' + user.id) Delete
    button(class="button" hx-target="#user" hx-select="#user" hx-swap="outerHTML transition:true" hx-get='/admin/users/' + user.id hx-vals='{"status": "edit"}') Edit