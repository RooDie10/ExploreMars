div#user(class="p-2 bg-blue-100 rounded-xl my-4")
  a.link(href="/admin/users" hx-get="/admin/users/" hx-select="#content" hx-push-url="/admin/users/" hx-target="#content" hx-swap="innerHTML") Back 
  h2.h2=user.name
  p
    strong email: 
    =user.email
  if user.level
    p
      strong level: 
      =user.level
  a(class="text-red-600 font-bold underline cursor-pointer block" hx-swap="outerHTML" hx-target="this" hx-confirm="Are you sure you want to delete this user? This action is irreversible." hx-delete='/api/user/' + user.id) Delete
  a(class="font-bold underline cursor-pointer block" hx-target="#user" hx-select="#user" hx-swap="outerHTML" hx-get='/admin/users/' + user.id hx-vals='{"status": "edit"}') Edit